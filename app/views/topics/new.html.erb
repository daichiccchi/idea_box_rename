<%= form_with(model: @topic, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<% end %>
<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
        <div class="flex-row">
         </div>
         　 <div class="form-group">
           　  <%= f.label :image %>
            　<span class="image">
                <%#= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
                <% @topic.images.each do |image| %>
                  <%= hidden_field :topic, :images, multiple: true, value: images.identifier %>
                <% end %>
                <%= f.file_field :images, multiple: true %>
              </span>
             </div> 
             <div class="form-group">
                <%= f.label :docment %>
             <span class="docment">
               <%= f.file_field :docment, accept: "docment/docx,docment/xlsx,docment/pdf" %>
             </span>
          </div>
          <%= f.label :some_id_name, class: "checkbox-inline" do %>
            <%= collection_check_boxes(:label, :label_ids, Label.all, :id, :name) %>
          <% end %>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>