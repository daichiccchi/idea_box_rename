<div class='main'>
  <div class='item-contents'>
    <div class="item-container">
      <ul class='item-lists'>
        <% if @q.description_cont != nil %>
          <h3 class="subtitle"><%= "#{@q.description_cont} の検索結果" %></h3>
        <% else %>
          <h3 class="subtitle"><%= "検索結果" %></h3>
     　 </ul>

          <div>
          </div>
        <% end %>
    </div>
  </div>

</div>
<div class="py-4 bg-light" >
    <div class="container">
      <div class="row">
        <% @topics.each do |topic| %>
        <div class="col-md-4 p-3">
          <div class="card box-shadow">
            <div class="card-img-top">
              <%= link_to topic_path(id: topic.id), method: :get do %>
                <%= image_tag topic.image.url, class: "card-img-top" %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-text">
                <%= topic.description.truncate(36, omission: '...and more...') %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div> <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
         <% end %>
      </div>
    </div>
 </div>
