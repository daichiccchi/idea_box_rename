<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-9">
    <section class="user_info">
        <div class="card-body">
          <div class="row">
            <div class="col">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar.url, size: "200x200" %>
          <% else %>
            <%= image_tag "noavatar.png", size: "200x200" %>
          <% end %>
            </div>
             <div class="col">
            <h5 class="card-title"><b> <%= @user.name %></b></h5>
            <h6 class="card-subtitle my-2 text-muted"><%= User.user_areas.key @user.user_area %></h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
            </div>
          </div>
        </div>
    </section>
  <aside>
</div>



<div class="py-4 bg-light" >
    <div class="container">
      <div class="row">
        <% @topics.each do |topic| %>
        <div class="col-md-4 p-3">
          <div class="card box-shadow">
            <div class="card-img-top">
              <%= link_to topic_path(id: topic.id), method: :get do %>
                <%= image_tag topic.image.url, class: "card-img-top" %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-text">
                <%= topic.description.truncate(36, omission: '...and more...') %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div> <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
         <% end %>
      </div>
    </div>
 </div>